<Window x:Class="ListBox_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListBox_Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <TextBlock Text="{Binding Name}"/>
        <ListBox Name="List" ItemsSource="{Binding Items}" SelectionMode="Extended">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel >
                        <Button DockPanel.Dock="Left" Content="Show" Command="{Binding ShowCommand}"/>
                        <TextBlock Text="{Binding }"/>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="Show!" Command="{Binding ShowCommand}" CommandParameter="{Binding ElementName=List, Path=SelectedItem}"/>
        <TextBlock Text="{Binding ElementName=List, Path=SelectedIndex}"/>

    </StackPanel>
</Window>
