<Application x:Class="PerpetuumMusica.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PerpetuumMusica"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:cc="clr-namespace:PerpetuumMusica.View.CustomControls"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!--colors-->
        <SolidColorBrush x:Key="main_color">#F65A25</SolidColorBrush>
        <SolidColorBrush x:Key="main_color_brighter">#f76a3b</SolidColorBrush>
        <SolidColorBrush x:Key="main_color_darker">#F65A25</SolidColorBrush>
        <SolidColorBrush x:Key="foreground_color">white</SolidColorBrush>

        <!--text Styles-->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource foreground_color}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <!--tooltip-->
        <Style TargetType="ToolTip">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Opacity" Value="0.7"/>
        </Style>
        <!--button styles-->
        <Style TargetType="Button" x:Key="MouseOverCursorChangeStyle">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="Button" x:Key="roundCornerButton" BasedOn="{StaticResource MouseOverCursorChangeStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Back" BorderThickness="0"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

