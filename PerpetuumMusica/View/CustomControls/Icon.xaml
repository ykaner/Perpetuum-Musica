<UserControl x:Class="PerpetuumMusica.View.CustomControls.Icon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PerpetuumMusica.View.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Width="{Binding Path=Size}" Height="{Binding Path=Size}">
        <Rectangle Fill="{StaticResource foreground_color}">
            <Rectangle.OpacityMask>
                <ImageBrush ImageSource="{Binding Path=ImageSource}"/>
            </Rectangle.OpacityMask>
        </Rectangle>
    </Grid>
</UserControl>
