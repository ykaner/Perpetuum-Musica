<Window x:Class="PerpetuumMusica.View.Information"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PerpetuumMusica.View"
        mc:Ignorable="d"
        Style="{StaticResource DialogWin}"
        Title="Information" Width="500">
    <ContentControl Style="{StaticResource Dialog}" >
        <StackPanel>
            <Button Style="{StaticResource XButton}"/>
            <TextBlock FontSize="30" FontWeight="Bold" >Perpetuum Musica</TextBlock>
            <TextBlock Margin="0 10">A professional music management software. </TextBlock>
            <TextBlock Margin="0 10">Created by Shachar Har-Shuv and Joseph Kaner</TextBlock>
            <DockPanel>
                <Button DockPanel.Dock="Right" >Close</Button>
            </DockPanel>

        </StackPanel>
        
    </ContentControl>
</Window>
